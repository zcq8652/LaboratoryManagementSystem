/* pages/addNotice/addNotice.wxss */
.all{
  width: 100%;
  height: 100vh;
  background-color: powderblue;
}
.name_part{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
}
.adm_name{
  margin-left: 20rpx;
  display: inline-block;
  width: 40%;
  height: 80rpx;
  font-size: 30rpx;
}
.content_part{
  margin-top: 20rpx;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
}
.n_content{
  border-top: 1rpx dotted dimgray;
  width: 100%;
  font-size: 30rpx;
}
.name_txt, .content_txt{
  display: block;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  float: left;
  color: dimgray;
}
.btn{
  margin-top: 40rpx;
  background-color: #1296db;
  color: #fff;
}

