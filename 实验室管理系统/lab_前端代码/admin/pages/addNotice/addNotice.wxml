<view class="all">
  <form bindsubmit="formSubmit">
    <view class="name_part">
      <view class="name_txt">发布人</view>
      <input class="adm_name" name="adm_name" value="{{u_name}}" disabled></input>
    </view>
    <view class="content_part">
      <view class="content_txt">公告内容</view>
      <textarea class="n_content" name="n_content" placeholder="请在此输入..." placeholder-style="font-size:30rpx;"></textarea>
    </view>
    <button form-type="submit" class="btn">提交</button>
  </form>
</view>
